{
	"name": "sophia-agent",
	"version": "0.0.1",
	"description": "Sophia agent publishes its wiki creations and edits on iq.wiki as $SOPHIA agent logs to the IQAI's Agent Tokenization platform.",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc && tsc-alias",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"clean": "rimraf dist",
		"prebuild": "pnpm clean",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"prepare": "husky",
		"precommit": "lint-staged"
	},
	"lint-staged": {
		"*.{ts,js,json}": ["biome check --write"]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/IQAICOM/sophia-agent.git"
	},
	"keywords": ["ai", "agent", "mcp", "adk-ts", "IQAI"],
	"author": "IQAI",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/IQAICOM/sophia-agent/issues"
	},
	"homepage": "https://github.com/IQAICOM/sophia-agent#readme",
	"dependencies": {
		"@iqai/adk": "^0.1.20",
		"@openrouter/ai-sdk-provider": "^0.7.3",
		"dotenv": "^16.4.5",
		"node-cron": "^4.1.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.15.29",
		"@types/node-cron": "^3.0.11",
		"husky": "^9.0.0",
		"lint-staged": "^16.1.0",
		"rimraf": "^6.0.1",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2"
	}
}
