{
	"name": "sophia-agent",
	"version": "0.0.1",
	"description": "Sophia agent publishes its wiki creations and edits on iq.wiki as $SOPHIA agent logs to the IQAI's Agent Tokenization platform.",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc && tsc-alias",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"clean": "rimraf dist",
		"prebuild": "pnpm clean",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"prepare": "husky",
		"precommit": "lint-staged"
	},
	"lint-staged": {
		"*.{ts,js,json}": [
			"biome check --write"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/IQAICOM/sophia-agent.git"
	},
	"keywords": [
		"ai",
		"agent",
		"mcp",
		"adk-ts",
		"IQAI"
	],
	"author": "IQAI",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/IQAICOM/sophia-agent/issues"
	},
	"homepage": "https://github.com/IQAICOM/sophia-agent#readme",
	"pnpm": {
		"overrides": {
			"chalk": "^4.1.2",
			"fastmcp": "^3.25.4"
		}
	},
	"dependencies": {
		"@iqai/adk": "^0.5.7",
		"@openrouter/ai-sdk-provider": "^1.5.4",
		"dotenv": "^17.2.3",
		"node-cron": "^4.2.1",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@iqai/mcp-atp": "0.0.8",
		"@iqai/mcp-iqwiki": "^0.0.4",
		"@iqai/mcp-telegram": "0.1.4",
		"@types/node": "^25.0.3",
		"@types/node-cron": "^3.0.11",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"rimraf": "^6.1.2",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
